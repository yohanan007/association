<!DOCTYPE html>
<html>
    <head>
         <meta charset="utf-8">
  <meta name="author" content="yohanan hirsch">
  <meta name="description" content="index du site">
  <title>blog 
  </title>
  <!-- lien bootstrap 4 -->
   {%block stylesheets%}
               <!-- Latest compiled and minified CSS -->
                    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
      {% endblock %}
         {%block javascript%}    
            <!-- jQuery library -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            
            <!-- Popper JS -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
            
            <!-- Latest compiled JavaScript -->
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script> 
            <!-- fin des liens bootstrap 4 -->
            {%endblock%}
    </head>
    <body>
       <section >
            {% for sections in section %}
           <article class="container">
               <div class="card">
                  <div class="card-header"> <h1>{{ sections.name}}</h1></div>
                  <div class="card-body"> <p>{{ sections.contenu }}</p></div>
                </div>
           </article>
            {% for article in sections.articles %} 
           <article class="container">
               <div class="card">
                      
                      <div class="card-body">
                        <h4 class="card-title"><h2>{{ article.nom }}</h2></h4>
                        <p class="card-text">{{ article.contenu }}</p>
                        {% for image in article.images %}
                       <img class="card-img-top" src="{{asset(image.uploadDir ~ '/' ~ image.id ~ '.' ~ image.adresse)}}" alt="{{ image.alt }}">
                    {% endfor %}
                      </div>
                    </div>
           </article>
             {% endfor %}
       </section> 
        {% endfor %}
       
        
    </body>
    </html>