{% extends "@FOSUser/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
 
{% if error %}
   <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
 
<form action="{{ path("fos_user_security_check") }}" method="post">
   <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
<div class="form-group">
   <label for="username">ENTREE VOTRE IDENTIFIANT :</label>
   <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
</div>
 
<div class="form-group">
   <label for="password">ENTREE VOTRE MOT DE PASSE :</label>
   <input class="form-control" type="password" id="password" name="_password" required="required" />
<div>
 
<div class="form-group form-check">
   <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on" />
   <label for="remember_me">se souvenir</label>
</div>
 
   <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
 
</form>

 
{% endblock fos_user_content %}